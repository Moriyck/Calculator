String inputString;
int result;
char firstCharacter;
char secondCharacter;
char thirdCharacter;
char fourthCharacter;
char fifthCharacter;

int firstNumber;
char operator;
int secondNumber;

int theNumberTen;

try (Scanner keyboardScanner = new Scanner(System.in)) {
    System.out.println("Input: ");
    inputString = keyboardScanner.nextLine();
    char[] inputStringArry = new char[inputString.length()];

    for (int i = 0; i < inputStringArry.length; i++) {
        inputStringArry[i] = inputString.toCharArray()[i];
    }

    for (int i = 0; i < inputStringArry.length; i++) {

        if (Character.isDigit(inputStringArry[i]) == false) {
            operator = inputStringArry[i];

            firstNumber = Character.digit(inputString.charAt(1), 10);
            secondNumber = Character.digit(inputString.charAt(3), 10);

            switch (operator) {
                case '+':
                    result = firstNumber + secondNumber;
                    System.out.println("Output: " + result + " op:" + operator + " ....:" + firstNumber);
                    break;

                case '-':
                    result = firstNumber - secondNumber;
                    System.out.println("Output: " + result);
                    break;

                case '*':
                    result = firstNumber * secondNumber;
                    System.out.println("Output: " + result);
                    break;

                case '/':
                    result = firstNumber / secondNumber;
                    System.out.println("Output: " + result);
                    break;
                default:
                    System.out.println("ОШИБКА т.к. строка не является математической операцией");
                    break;
            }
        }
    }

    if (inputString.length() < 3) {
        System.out.println("ОШИБКА т.к. строка не является математической операцией");
    }

    if (inputString.length() > 5) {
        System.out.println("ОШИБКА т.к. строка не является математической операцией");
    }

} catch (Exception e) {
    System.out.println("ОШИБКА ");
}
} 
 
 
